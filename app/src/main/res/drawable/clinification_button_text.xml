<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:state_pressed="true"
        android:color="@color/clinification_green"/> //currently pressed turning the toggle on
    <item android:state_pressed="true"
        android:color="@color/clinification_green"/> //currently pressed turning the toggle off
    <item android:state_checked="true"
        android:color="@color/clinification_green"/> //not pressed default checked state
    <item android:state_enabled="false"
        android:color="@color/white"/>
    <item
        android:color="@android:color/white"/> //default non-pressed non-checked

</selector>